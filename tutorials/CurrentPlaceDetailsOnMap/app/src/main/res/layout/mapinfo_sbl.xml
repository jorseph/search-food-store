<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tv_mapInfo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="title"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgv_mapInfo_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_mapInfo_title" />

    <RelativeLayout
        android:id="@+id/rl_mapInfo_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_mapInfo_title"
        android:layout_toLeftOf="@+id/imgv_mapInfo_pic" >

        <ImageView
            android:id="@+id/imgv_mapInfo_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/tv_mapInfo_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imgv_mapInfo_addr"
            android:text="addr" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mapInfo_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_mapInfo_addr"
        android:layout_toLeftOf="@+id/imgv_mapInfo_pic" >

        <ImageView
            android:id="@+id/imgv_mapInfo_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/telephone" />

        <TextView
            android:id="@+id/tv_mapInfo_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imgv_mapInfo_tel"
            android:text="tel" />
    </RelativeLayout>


</RelativeLayout>